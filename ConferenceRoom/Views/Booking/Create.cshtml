@model ConferenceRoom.Models.BookingReservationHolderViewModel

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create Booking</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Booking.Code" class="control-label"></label>
        <input asp-for="Booking.Code" class="form-control" />
        <span asp-validation-for="Booking.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.NumberOfPeople" class="control-label"></label>
        <input asp-for="Booking.NumberOfPeople" class="form-control" />
        <span asp-validation-for="Booking.NumberOfPeople" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label asp-for="Booking.RoomId" class="control-label"></label>
        <select asp-for="Booking.RoomId" class="form-control" asp-items="@(new SelectList(ViewBag.Rooms, "Id", "Code"))"></select>
        <span asp-validation-for="Booking.RoomId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.StartDate" class="control-label"></label>
        <input asp-for="Booking.StartDate" class="form-control" />
        <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Booking.EndDate" class="control-label"></label>
        <input asp-for="Booking.EndDate" class="form-control" />
        <span asp-validation-for="Booking.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <h2>Reservation Holder Information</h2>
        <label asp-for="ReservationHolder.IdCardNumber" class="control-label"></label>
        <input asp-for="ReservationHolder.IdCardNumber" class="form-control" />
        <span asp-validation-for="ReservationHolder.IdCardNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReservationHolder.Name" class="control-label"></label>
        <input asp-for="ReservationHolder.Name" class="form-control" />
        <span asp-validation-for="ReservationHolder.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReservationHolder.Surname" class="control-label"></label>
        <input asp-for="ReservationHolder.Surname" class="form-control" />
        <span asp-validation-for="ReservationHolder.Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReservationHolder.Email" class="control-label"></label>
        <input asp-for="ReservationHolder.Email" class="form-control" />
        <span asp-validation-for="ReservationHolder.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReservationHolder.PhoneNumber" class="control-label"></label>
        <input asp-for="ReservationHolder.PhoneNumber" class="form-control" />
        <span asp-validation-for="ReservationHolder.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReservationHolder.Notes" class="control-label"></label>
        <textarea asp-for="ReservationHolder.Notes" class="form-control"></textarea>
        <span asp-validation-for="ReservationHolder.Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    @Html.AntiForgeryToken()
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
