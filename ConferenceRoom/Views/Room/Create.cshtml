@model ConferenceRoom.Models.RoomViewModel
@{
    ViewData["Title"] = "Create Room";
}
<h1>Create Room</h1>
<div class="create-form">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Code" class="control-label"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MaximumCapacity" class="control-label"></label>
            <input asp-for="MaximumCapacity" class="form-control" />
            <span asp-validation-for="MaximumCapacity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
<style scoped>
    .create-form {
        border: solid black 1px;
        max-height: 500px;
        max-width: 500px;
        margin: auto;
        padding: 10px;
    }
</style>
